<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".TrainAndTest"
    android:background="@color/colorPrimary">
    <TextView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="辨識失敗可以多上傳不同角度的照片喔 !"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#FFF"
        android:gravity="center"
        app:fontFamily="@font/asap_medium"/>

    <Button
        android:id="@+id/btTakePhoto"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_round_button_yellow"
        android:text="@string/takePhoto"
        android:textSize="20sp" />
    <Button
        android:id="@+id/buttonTrain"
        android:layout_below="@+id/btTakePhoto"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_round_button_yellow"
        android:text="@string/train"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonTest"
        android:layout_below="@id/buttonTrain"
        android:layout_width="150dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_round_button_yellow"
        android:text="@string/test"
        android:textSize="20sp" />

</RelativeLayout>